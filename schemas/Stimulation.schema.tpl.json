{
    "_type": "https://openminds.ebrains.eu/Stimulation/Stimulation",
    "_extends": "https://openminds.ebrains.eu/core/Stimulation",
    "required": [
        "internalIdentifier",
        "subStimulation"
    ],
    "properties": {
        "name": {
            "type": "string",
            "_instruction": "Enter a descriptive name for this stimulation."
        },
        "internalIdentifier": {
            "type": "string",
            "_instruction": "Enter the label that was used to identify the stimulation within the data."
        },
        "subStimulation": {
            "_instruction": "Chose the coresponding stimulation.",
            "_linkedTypes": [
                "https://openminds.ebrains.eu/Stimulation/AuditoryStimulation",
                "https://openminds.ebrains.eu/Stimulation/BehavioralPhase",
                "https://openminds.ebrains.eu/Stimulation/ChemicalStimulation",
                "https://openminds.ebrains.eu/Stimulation/ElectrophysiologicalStimulation",
                "https://openminds.ebrains.eu/Stimulation/OpticalStimulation",
                "https://openminds.ebrains.eu/Stimulation/TactileStimulation",
                "https://openminds.ebrains.eu/Stimulation/VisualStimulation"
            ]
        },
        "cogAtlasID": {
            "type": "string",
            "_formats": [
                "iri"
            ],
            "_instruction": "URI of the corresponding Cognitive Atlas Task term."
        },
        "cogPOID": {
            "type": "string",
            "_formats": [
                "iri"
            ],
            "_instruction": "URI of the corresponding CogPO term."
        },
        "additionalRemarks": {
            "type": "string",
            "_instruction": "Enter additional remarks about this stimulation."
        },
        "description": {
            "type": "string",
            "_instruction": "Enter a description for this stimulation"
        }
    }
}