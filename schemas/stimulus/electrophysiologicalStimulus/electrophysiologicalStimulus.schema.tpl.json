{
  "_type": "https://openminds.ebrains.eu/Stimulation/ElectrophysiologicalStimulus",
  "required": [
    "internalIdentifier",
    "phases"
  ],
  "properties": {
    "internalIdentifier": {
      "type": "string",
      "_instruction": "Enter the label that was used to identify this stimulus within the data."
    },
    "electrophysiologicalStimulusType": {
      "type": "string",
      "_instruction": "Indicate type of this stimulus (e.g. voltage, curent)"
    },
    "randomised": {
      "type": "boolean",
      "_instruction": "Is the pahses of this stimulus randomised?"
    },
    "citation": {
      "_instruction": "Any posible citation of the stimulus",
      "_linkedTypes": [
        "https://openminds.ebrains.eu/core/DOI",
        "https://openminds.ebrains.eu/core/URL"
      ]
    },
    "arrangement": {
      "_instruction": "Phase arrangment of this stimulus",
      "type": "array",
      "minItems": 2,
      "items": {
        "type": "string"
      }
    },
    "electrodes": {
      "_instruction": "Add all the electrodes used for this stimulus",
      "_linkedTypes": [
        "https://openminds.ebrains.eu/ephys/Electrode"
      ]
    },
    "pulseGenerator": {
      "_instruction": "Pulse generator asositaed with this stimulus",
      "_linkedTypes": [
        "https://openminds.ebrains.eu/Stimulation/PulseGenerator"
      ]
    },
    "phases": {
      "type": "array",
      "minItems": 1,
      "_instruction": "Phases used in this stimulus",
      "_linkedTypes": [
        "https://openminds.ebrains.eu/Stimulation/ElectrophysiologicalPhase",
        "https://openminds.ebrains.eu/Stimulation/RestPhase"
      ]
    }
  }
}
